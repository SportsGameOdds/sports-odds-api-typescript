{
  "dxt_version": "0.2",
  "name": "sports-odds-api-mcp",
  "version": "1.0.1",
  "description": "The official MCP Server for the Sports Game Odds API",
  "author": {
    "name": "Sports Game Odds",
    "email": "api@sportsgameodds.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SportsGameOdds/sports-odds-api-typescript.git"
  },
  "homepage": "https://github.com/SportsGameOdds/sports-odds-api-typescript/tree/main/packages/mcp-server#readme",
  "documentation": "https://sportsgameodds.com/docs/",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "SPORTS_ODDS_API_KEY_HEADER": "${user_config.SPORTS_ODDS_API_KEY_HEADER}",
        "SPORTS_ODDS_API_KEY_HEADER": "${user_config.SPORTS_ODDS_API_KEY_HEADER}"
      }
    }
  },
  "user_config": {
    "SPORTS_ODDS_API_KEY_HEADER": {
      "title": "api_key_header",
      "description": "API key via header",
      "required": false,
      "type": "string"
    },
    "SPORTS_ODDS_API_KEY_HEADER": {
      "title": "api_key_param",
      "description": "API key via query param",
      "required": false,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
